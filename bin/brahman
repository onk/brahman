#!/usr/bin/ruby
require "optparse"
require "brahman"

options = {}
opt = OptionParser.new
subopt = Hash.new {|hash, key|
  $stderr.puts "no such subcommand: #{key}"
  exit 1
}
subopt["list"] = OptionParser.new.on("-r VAL") {|v| options[:revisions] = v}
opt.order!(ARGV)

subopt[ARGV.shift].parse(ARGV) unless ARGV.empty?
Brahman.run(options)

